mn":1,"offset":1663},"end":{"line":33,"column":21,"offset":1683}}},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"-Node API: JavaScript utilities like file and network I/O, and a whole host of others, like cryptography and compression","position":{"start":{"line":35,"column":1,"offset":1687},"end":{"line":35,"column":121,"offset":1807}}}],"position":{"start":{"line":35,"column":1,"offset":1687},"end":{"line":35,"column":121,"offset":1807}}},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"-The Node core: a set of JavaScript modules that implement the Node API. (Apparently, some of the modules depend on libuv and other C++ code but that’s an implementation detail).","position":{"start":{"line":37,"column":1,"offset":1811},"end":{"line":37,"column":179,"offset":1989}}}],"position":{"start":{"line":37,"column":1,"offset":1811},"end":{"line":37,"column":179,"offset":1989}}},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"-JavaScript engine: Chrome’s V8 Engine: A fast JavaScript-to-machine code compiler to load, optimize, and run your JavaScript code","position":{"start":{"line":39,"column":1,"offset":1993},"end":{"line":39,"column":131,"offset":2123}}}],"position":{"start":{"line":39,"column":1,"offset":1993},"end":{"line":39,"column":131,"offset":2123}}},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"-The event loop: implemented using an event-driven, non-blocking I/O library called libuv to make it lightweight and efficient (and scalable)","position":{"start":{"line":41,"column":1,"offset":2127},"end":{"line":41,"column":142,"offset":2268}}}],"position":{"start":{"line":41,"column":1,"offset":2127},"end":{"line":41,"column":142,"offset":2268}}},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"element","tagName":"strong","properties":{},"children":[{"type":"text","value":"Event Loop","position":{"start":{"line":43,"column":3,"offset":2274},"end":{"line":43,"column":13,"offset":2284}}}],"position":{"start":{"line":43,"column":1,"offset":2272},"end":{"line":43,"column":15,"offset":2286}}}],"position":{"start":{"line":43,"column":1,"offset":2272},"end":{"line":43,"column":15,"offset":2286}}},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Event-loop is the place where all our asynchronous code is executed.","position":{"start":{"line":45,"column":1,"offset":2290},"end":{"line":45,"column":69,"offset":2358}}}],"position":{"start":{"line":45,"column":1,"offset":2290},"end":{"line":45,"column":69,"offset":2358}}},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Node uses ","position":{"start":{"line":47,"column":1,"offset":2362},"end":{"line":47,"column":11,"offset":2372}}},{"type":"element","tagName":"a","properties":{"href":"https://libuv.org/"},"children":[{"type":"text","value":"Libuv","position":{"start":{"line":47,"column":12,"offset":2373},"end":{"line":47,"column":17,"offset":2378}}}],"position":{"start":{"line":47,"column":11,"offset":2372},"end":{"line":47,"column":38,"offset":2399}}},{"type":"text","value":" as the event loop implementation. To use a Node asynchronous API, you pass a callback function as an argument to that API function, and during the event loop, your callback is executed.","position":{"start":{"line":47,"column":38,"offset":2399},"end":{"line":47,"column":224,"offset":2585}}}],"position":{"start":{"line":47,"column":1,"offset":2362},"end":{"line":47,"column":224,"offset":2585}}},{"type":"text","value":"\n"},{"type":"element","tagName":"h2","properties":{},"children":[{"type":"text","value":"How Node.js works","position":{"start":{"line":49,"column":4,"offset":2592},"end":{"li